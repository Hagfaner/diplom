@page
@model diplom.Pages.merch.DeleteModel

@{
    ViewData["Title"] = "Удалить";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить этот товар?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Material.Name)
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Material.Discription)
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Material.Price)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Material.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Назад</a>
    </form>
</div>
